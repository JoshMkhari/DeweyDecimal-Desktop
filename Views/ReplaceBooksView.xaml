                     TextAlignment="Left" 
                     Width="20" 
                     TextChanged="TStackSizeTop_OnTextChanged" 
                     KeyDown="TStackSizeTop_OnKeyDown" />
            <Slider Maximum="6" 
                    Minimum="5"
                    TickPlacement="BottomRight" 
                    TickFrequency="1" 
                    IsSnapToTickEnabled="True" 
                    x:Name="StackSizeTop" 
                    Cursor="Hand" 
                    ValueChanged="StackSizeTop_OnValueChanged"/>
