                   Canvas.Left="372"
                   Canvas.Top="230"
                   Name="DockPanelTop"
                   Visibility="Collapsed">
            <TextBox x:Name="TStackSizeTop" 
                     Text="{Binding ElementName=StackSizeTop, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
